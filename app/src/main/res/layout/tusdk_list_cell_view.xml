<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    
    <RelativeLayout 
         android:layout_width="65dp"
		 android:layout_height="match_parent"
		 android:background="@drawable/tusdk_view_dubbing_roundcorner_bg">
    
	   <org.lasque.tusdk.core.view.TuSdkImageView
	   android:id="@+id/lsq_item_image"
	   android:layout_width="65dp"
	   android:layout_height="90dp"
	   android:layout_centerInParent="true"
	   
	     />
	</RelativeLayout>
		<TextView 
          android:id="@+id/lsq_item_title"
          android:layout_width="65dp"
          android:layout_height="20dp"
          android:textSize="13sp"
          android:textColor="@color/lsq_color_white"
          android:background="@drawable/tusdk_view_filter_unselected_text_roundcorner"
          android:gravity="center" 
          android:layout_alignParentBottom="true"
	         />
		<RelativeLayout 
		    android:id="@+id/lsq_item_border"
		    android:layout_width="65dp"
		    android:layout_height="match_parent"
		    android:background="@drawable/tusdk_view_filter_selected_border"
		    android:visibility="gone"
	    />


</RelativeLayout>
