<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/movie_range_selection_time"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
	<RelativeLayout
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_margin="@dimen/lsq__space_20" >
	     <TextView
	         android:id="@+id/lsq_play_time"
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="@string/lsq_text_time_tv"
	         android:textColor="@color/lsq_seekbar_drag_color"
	         android:textSize="@dimen/lsq_font_size_36"
	         android:layout_centerInParent="true"/>         
	 </RelativeLayout>
	              
	<LinearLayout 
	     android:layout_width="match_parent"
	     android:layout_height="wrap_content"
	     android:layout_marginLeft="@dimen/lsq__space_20"
	     android:layout_marginRight="@dimen/lsq__space_20"
	     android:orientation="vertical">
	<RelativeLayout 
	      android:id="@+id/lsq_time_item"
	      android:layout_width="match_parent"
	      android:layout_height="wrap_content"
	      android:layout_marginBottom="@dimen/lsq__space_5">  
	      <TextView
	          android:id="@+id/lsq_left_time"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="@string/lsq_text_time_tv"
	          android:textColor="@color/lsq_text_time"
	          android:textSize="@dimen/lsq_font_size_30"
	          android:layout_alignParentLeft="true"/> 
	      <TextView
	          android:id="@+id/lsq_right_time"
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content"
	          android:text="@string/lsq_text_time_tv"
	          android:textColor="@color/lsq_text_time"
	          android:textSize="@dimen/lsq_font_size_30"
	          android:layout_alignParentRight="true"/> 
	  </RelativeLayout>
	  
	  <com.upyun.shortvideo.views.MovieRangeSelectionBar
	       android:id="@+id/lsq_seekbar"
	       android:layout_width="match_parent"
	       android:layout_height="@dimen/lsq_seekbar_height"
	       android:layout_marginBottom="@dimen/lsq__space_20"/>    
	</LinearLayout>
    

</LinearLayout>
